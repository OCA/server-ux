<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_tier_definition_helper_tree" model="ir.ui.view">
        <field name="name">tier.definition.helper.tree</field>
        <field name="model">tier.definition.helper</field>
        <field name="arch" type="xml">
            <tree string="Tier Definition Helper">
                <field name="model_id"/>
                <field name="name"/>
                <field name="notify_on_create"/>
                <field name="has_comment"/>
                <field name="approve_sequence"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_tier_definition_helper_form" model="ir.ui.view">
        <field name="name">tier.definition.helper.form</field>
        <field name="model">tier.definition.helper</field>
        <field name="arch" type="xml">
            <form string="Tier Definition Helper">
                <header>
                    <button name="button_create_tier" string="Create Tier" states="draft" class="oe_highlight" type="object"/>
                    <button name="button_delete_tier" string="Delete Tier" type="object" states="done"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,done" readonly="1"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <span class="oe_edit_only">Name</span>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group name="left">
                            <field name="model_id" options="{'no_create': True}"/>
                            <field name="model" invisible="1"/>
                            <field name="review_type"/>
                            <field name="definition_type"/>
                            <field name="definition_domain" widget="domain" options="{'model': 'model'}"
                                   attrs="{'invisible': [('definition_type', '!=', 'domain')]}"/>
                        </group>
                        <group name="right">
                            <field name="notify_on_create"/>
                            <field name="has_comment"/>
                            <field name="approve_sequence"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Tier Definition">
                            <field name="line_ids" attrs="{'readonly': [('state', '!=', 'draft')]}">
                                 <tree name="line_tree" string="Lines" editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="approval_level"/>
                                    <field name="name"/>
                                    <field name="reviewer_id" attrs="{'column_invisible': [('parent.review_type', '!=', 'individual')], 'required': [('parent.review_type', '=', 'individual')]}"/>
                                    <field name="reviewer_group_id" attrs="{'column_invisible': [('parent.review_type', '!=', 'group')], 'required': [('parent.review_type', '=', 'group')]}"/>
                                    <field name="tier_definition_id" readonly="1"/>
                                </tree>
                                <form name="line_form" string="Lines">
                                    <group>
                                        <group>
                                            <field name="approval_level"/>
                                        </group>
                                        <group>
                                            <field name="tier_definition_id" readonly="1"/>
                                        </group>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_tier_definition_helper_search" model="ir.ui.view">
        <field name="name">tier.definition.helper.search</field>
        <field name="model">tier.definition.helper</field>
        <field name="arch" type="xml">
            <search>
                <field name="model_id"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                <filter string="Done" name="done" domain="[('state','=','done')]"/>
                <group expand="0" string="Group By">
                    <filter string="Model" name="model" domain="[]" context="{'group_by':'model_id'}"/>
                    <filter string="Status" name="status" domain="[]" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="tier_definition_helper_action" model="ir.actions.act_window">
        <field name="name">Tier Definition Helper</field>
        <field name="res_model">tier.definition.helper</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_tier_definition_helper_search"/>
        <field name="view_id" ref="view_tier_definition_helper_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new tier definition
            </p>
        </field>
    </record>

    <menuitem id="menu_tier_definition_helper"
              parent="base_tier_validation.menu_tier_confirmation"
              action="tier_definition_helper_action"/>

</odoo>
