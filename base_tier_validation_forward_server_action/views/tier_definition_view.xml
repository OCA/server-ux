<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="tier_definition_view_form" model="ir.ui.view">
        <field name="name">tier.definition.form</field>
        <field name="model">tier.definition</field>
        <field
            name="inherit_id"
            ref="base_tier_validation_server_action.tier_definition_view_form"
        />
        <field name="arch" type="xml">
            <field name="rejected_server_action_id" position="after">
                <field
                    name="forwarded_server_action_id"
                    attrs="{'invisible': [('has_forward', '=', False)]}"
                />
            </field>
        </field>
    </record>
</odoo>
