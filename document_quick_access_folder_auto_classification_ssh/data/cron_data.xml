<odoo noupdate="1">
    <record id="document_quick_access_folder_auto_classification.process_documents" model="ir.cron">
        <field name="active" eval="False"/>
    </record>
    <record id="process_documents" model="ir.cron">
        <field name="name">Process documents by SSH</field>
        <field name="active" eval="True"/>
        <field name="model_id"
               ref="document_quick_access.model_document_quick_access_rule"/>
        <field name="state">code</field>
        <field name="code">model.cron_folder_ssh_auto_classification()</field>
        <field name="interval_number">15</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="user_id" ref="base.user_root"/>
    </record>
</odoo>
