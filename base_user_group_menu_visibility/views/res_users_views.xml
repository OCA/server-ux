<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="view_totp_form">
        <field name="name">user form: group menu visibility plan</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='preferences']" position="after">
                <field name="is_system_user" invisible="1" />
                <page
                    string="Menu Visibility"
                    name="menu_visibility"
                    attrs="{'invisible': ['|', ('id', '=', False), ('is_system_user', '=', True)]}"
                >
                    <group>
                        <field name="group_menu_visibility_ids" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
